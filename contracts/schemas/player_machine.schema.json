{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "player_machine fixture",
  "type": "object",
  "required": [
    "contract_version",
    "suite",
    "case_id",
    "now_ms",
    "steps"
  ],
  "properties": {
    "contract_version": {
      "type": "integer",
      "minimum": 1
    },
    "suite": {
      "const": "player_machine"
    },
    "case_id": {
      "type": "string",
      "minLength": 1
    },
    "now_ms": {
      "type": "integer",
      "minimum": 0
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "t_ms",
          "event",
          "expect"
        ],
        "properties": {
          "t_ms": {
            "type": "integer",
            "minimum": 0
          },
          "event": {
            "type": "object",
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": true
          },
          "expect": {
            "type": "object",
            "required": [
              "phase",
              "intent"
            ],
            "properties": {
              "phase": {
                "type": "string",
                "enum": [
                  "idle",
                  "booting_torrent",
                  "polling_localhost",
                  "loading_media",
                  "seeking",
                  "buffering",
                  "ready",
                  "ended",
                  "error"
                ]
              },
              "intent": {
                "type": "string",
                "enum": [
                  "play",
                  "pause"
                ]
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
